[user]
  name = Adriaan Balt Louis Scholvinck
  email = adriaan@balt.us
[color]
  ui = true
[core]
  editor = subl -w  
  quotepath = false
[github]
  user = adriaanbalt
  token = # your github token here 
[diff]
  tool = "bbdiff"
[difftool]
  prompt = true
[difftool "bbdiff"]
  cmd = /usr/local/bin/bbdiff --wait --resume "$LOCAL" "$REMOTE"
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  unstage = reset HEAD
  pl = pull
  ps = push
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset by %an' --abbrev-commit --date=relative
  save = stash save
  sh = stash list
  mr = merge
  fall = fetch --all
  terse = log --graph --pretty=format:'The author of %h was %an, %ar, and they said \"%s\"'
